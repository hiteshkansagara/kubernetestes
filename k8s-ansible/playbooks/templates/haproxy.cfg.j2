global
    log /dev/log local0
    log /dev/log local1 notice
    daemon
    maxconn 2048

defaults
    log     global
    mode    tcp
    option  tcplog
    timeout connect 10s
    timeout client 1m
    timeout server 1m

frontend kubernetes-frontend
    bind *:{{ haproxy_bind_port }}
    default_backend kubernetes-backend

backend kubernetes-backend
    balance roundrobin
{% for host in groups['master'] %}
    server {{ host }} {{ hostvars[host]['ansible_host'] }}:6443 check
{% endfor %}

frontend argocd-frontend
    bind *:{{ haproxy_bind_port_argocd }}
    default_backend argocd-backend

backend argocd-backend
    balance roundrobin
{% for host in groups['master'] %}
    server {{ host }} {{ hostvars[host]['ansible_host'] }}:{{ haproxy_bind_port_argocd }} check
{% endfor %}